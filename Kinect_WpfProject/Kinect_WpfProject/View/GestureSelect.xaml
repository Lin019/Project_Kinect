<Window x:Class="Kinect_WpfProject.View.GestureSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinect_WpfProject.View"
        mc:Ignorable="d"
        Title="FilmMenu" Height="363.971" Width="606.617"  Background="#343838" Cursor="Hand" WindowState="Maximized" WindowStartupLocation="CenterScreen">
   
        <Grid >
        <Viewbox Stretch="UniformToFill">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="252" Margin="10,10,0,0" TextWrapping="Wrap"  Foreground="#FFF1E7E7" VerticalAlignment="Stretch" Width="200"><Run Text="選"/><LineBreak/><Run Text="擇"/><LineBreak/><Run Text="復"/><LineBreak/><Run Text="健"/><LineBreak/><Run Text="動"/><LineBreak/><Run Text="作"/></TextBlock>
        </Viewbox>
        <ScrollViewer x:Name="ScrollViewer" >
            <Viewbox Stretch="UniformToFill ">
                <StackPanel>

                    <Button x:Name="Shoulder_extension1" Click="Button_Click" Height="165" Width="483" Margin="100,30,10,0" >
                        <Image Source="/ShoulderExtension.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Shoulder_flexion" Click="Button_Click"  Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ShoulderFlexion.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Shoulder_abduction" Click="Button_Click"  Height="165" Width="483" Margin="100,0,10,0">
