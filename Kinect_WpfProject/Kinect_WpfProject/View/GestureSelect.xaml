                    </Button>
                    <Button x:Name="Shoulder_internal_rotation" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ShoulderInternalRotation.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Elbow_flexion" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ElbowFlexion.JPG" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Elbow_flexion_2" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ElbowFlexion2.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Elbow_extension" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ElbowExtension.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Forearm_pronation" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ForearmPronation.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Wrist_extension" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/WristExtension.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Wrist_extension_2" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/WristExtension2.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Wrist_flexion" Click="Button_Click"  Height="165" Width="483" Margin="100,0,10,30">
                        <Image Source="/WristFlexion.jpg" Width="510" Height="165"/>
                    </Button>
                </StackPanel>
            </Viewbox>
        </ScrollViewer>
       
        <Button x:Name="button_ScrollDown" MouseEnter="ScrollDownStart" Background="#343838" Height="20" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="auto"/>
        <Button x:Name="button_ScrollUp" MouseEnter="ScrollUpStart"  Background="#343838" Height="20" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="auto"/>




        </Grid>

</Window>
