                    </Button>
                    <Button x:Name="Shoulder_horizontal_abduction" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
                        <Image Source="/ShoulderHorizontalAbduction.jpg" Width="510" Height="165"/>
                    </Button>
                    <Button x:Name="Shoulder_scaption" Click="Button_Click" Height="165" Width="483" Margin="100,0,10,0">
